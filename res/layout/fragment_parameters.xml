<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp" />
    
    <TextView
        android:id="@+id/prompt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location to search:" />
    
    <EditText android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Use Present Location (inactive)" />

    <TextView
        android:id="@+id/prompt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance to search for property rentals:" />
    
    <EditText
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="10 (miles)" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Search Properties" />

</LinearLayout>