<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/search_properties_parameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/labels_padding_size"
        android:text="@string/search_properties"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/prompt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_location" />
    
    <EditText android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location" />

    <TextView
        android:id="@+id/prompt_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_distance" />
    
    <EditText
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/distance" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prompt_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_check_in" />

            <Button
                android:id="@+id/start_date_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prompt_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_check_out" />

            <Button
                android:id="@+id/end_date_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/search_button" />

</LinearLayout>